# =============================================================================
# CRM Backend - Production Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values on your VPS at /opt/apps/crm/
# =============================================================================

# GitHub Container Registry (set by deploy script, usually not manually changed)
GITHUB_REPOSITORY=facreativefirm/crm-backend
VERSION=latest

# ---------- PostgreSQL Database ----------
POSTGRES_DB=crm_database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
POSTGRES_PORT=5434

# ---------- Backend Configuration ----------
BACKEND_PORT=3006
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING

# CORS - comma-separated allowed origins
ALLOWED_ORIGINS=https://clientarea-nine.vercel.app,https://crm.facreative.net

# Frontend URL (used for email links, etc.)
FRONTEND_URL=https://clientarea-nine.vercel.app

# ---------- Redis (optional) ----------
REDIS_URL=

# ---------- SMTP / Email ----------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@facreative.net
