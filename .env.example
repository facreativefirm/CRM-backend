# Database Configuration
# For local development with Docker Compose (port 5433 to avoid conflict with Supabase)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/crm_database?schema=public"

# For production or custom setup, use this format:
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
PORT=3006
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"

# Redis Configuration (optional)
REDIS_URL="redis://localhost:6379"
